{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "files": [
    "src/index.ts"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/dist"
    ]
  }
}
